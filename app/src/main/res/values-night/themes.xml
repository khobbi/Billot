<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Billot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime1</item>
        <item name="colorPrimaryVariant">@color/lime_green_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_900</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/grey_900</item>
        <item name="colorError">@color/reddish</item>
        <item name="colorOnError">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <!--for main activity-->
    <style name="Theme.Billot.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime1</item>
        <item name="colorPrimaryVariant">@color/lime_green_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_900</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/grey_900</item>
        <item name="colorError">@color/reddish</item>
        <item name="colorOnError">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="forButtons1">
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="forButtons2">
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/blue_600</item>
    </style>
</resources>